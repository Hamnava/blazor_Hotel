@page "/hotel/room-details/{Id:int}"

<div class="container mt-3">
    <div class="row bg-dark text-white">
        <div class="col-8">
            <div  style="display:flex; justify-content:space-between;">
                <h5>Selectd Room</h5>
                <a class="btn btn-secondary">Back to Rooms</a>
            </div>
            <hr class="my-4" />
            <div class="row text-white">
                    <div class="col-7">
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="images/slider2.jpg" class="d-block w-100" alt="slider one">
                                </div>
                                <div class="carousel-item">
                                    <img src="images/slider1.jpg" class="d-block w-100" alt="slider two">
                                </div>
                                <div class="carousel-item">
                                    <img src="images/slider2.jpg" class="d-block w-100" alt="slider three">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    
                        <h4 class="text-warning text-uppercase">NAME SOME</h4>
                        <p>description something about description something about description something about description something about</p>
                    </div>
                    
                    <div class="col-5">
                        
                        <p>Max Occupancy : occupancy adults</p>
                        <p>Vila size : size room  sqft</p>
                        <h1 class="text-warning">USD <span>234.234</span></h1>
                        
                        <p>cost for 2300 nights</p>
                    </div>
                </div>
        </div>
        <div class="col-4">
             
                <h5>Enter Details</h5>
                <hr class="my-4 mt-5" />
               <label>Name</label>
               <input type="text"  class="form-control mb-3" />
               <label>Phone </label>
               <input type="text"  class="form-control mb-3" />
               <label>Email</label>
               <input type="text"  class="form-control mb-3" />
               <label>Check In Date</label>
               <input type="date" disabled class="form-control mb-3" />
               <label>Check Out Date</label>
               <input type="date" disabled class="form-control mb-3" />
               <label>No of Nights</label>
               <select class="form-control">
                   @for (var i = 1; i <= 10; i++)
                  {
                      <option>@i</option>
                  }
               </select>
               
               <input type="submit"  class="form-control btn btn-success my-3" value"CheckOut" />
            
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }
}
